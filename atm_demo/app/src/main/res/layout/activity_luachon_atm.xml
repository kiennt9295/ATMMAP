<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.atm_demo.chon_atm.luachon_atm"
    android:background="@drawable/bando">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/lvnganhang"
        android:layout_centerHorizontal="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="60dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/include2"
        android:layout_marginTop="7dp" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        android:layout_alignParentTop="true"
        android:id="@+id/include2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtimkiem"
        android:hint="Tìm kiếm"
        android:drawableLeft="@drawable/places_ic_search"
        android:background="@drawable/khung_edit"
        android:padding="10dp"
        android:textSize="22dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/lvnganhang"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgxoa"
        android:src="@drawable/places_ic_clear"
        android:layout_alignBottom="@+id/edtimkiem"
        android:layout_alignEnd="@+id/edtimkiem"
        android:layout_marginRight="7dp"
        android:visibility="invisible"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
