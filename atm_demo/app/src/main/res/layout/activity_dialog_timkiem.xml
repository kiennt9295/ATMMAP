<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bando">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:background="@drawable/khung3">
        <ImageView
            android:layout_width="0dip"
            android:layout_height="35dp"
            android:layout_weight=".15"
            android:src="@drawable/icon"
            android:layout_marginLeft="5dp" />
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".85"
            android:text="TÌM ĐƯỜNG"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Địa điểm bắt đầu:"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="2dp">


        <Button
            android:id="@+id/btnvitribatdau"
            android:layout_width="0dip"
            android:layout_height="33dp"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:text="Nhập địa điểm bắt đầu"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/khung1"
            android:drawableLeft="@drawable/places_ic_search"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btnvitrihientaitimkiem"
            android:layout_width="0dip"
            android:layout_height="33dp"
            android:layout_weight=".12"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:background="@drawable/khung2"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Tên ngân hàng:"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="2dp">


        <Button
            android:id="@+id/btndialog_tenNH"
            android:layout_width="0dip"
            android:layout_height="33dp"
            android:layout_weight=".7"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:text="Nhập tên ngân hàng"
            android:textSize="15dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:gravity="left|center_vertical"
            android:textColor="#000000"
            android:background="@drawable/khung1"
            android:drawableLeft="@drawable/places_ic_search"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="Bán kính:"
            android:textSize="17dp"
            android:textColor="#000000"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingBottom="10dp">


        <Spinner
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/spbankinh"
            android:layout_weight=".7"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:background="@drawable/khung1" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="15dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btntimkiem_atm"
            android:layout_width="0dip"
            android:layout_height="37dp"
            android:layout_weight=".65"
            android:text="Tìm Kiếm"
            android:textSize="15dp"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/khung4"
            android:padding="5dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btnthoat"
            android:layout_width="0dip"
            android:layout_height="37dp"
            android:layout_weight=".35"
            android:text="Thoát"
            android:textSize="15dp"
            android:singleLine="true"
            android:background="@drawable/khung4"
            android:padding="5dp"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>